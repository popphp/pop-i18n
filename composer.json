{
    "name": "popphp/pop-i18n",
    "description": "Pop I18n Component for Pop PHP Framework",
    "keywords": [
        "i18n",
        "l10n",
        "internationalization",
        "localization",
        "language",
        "locale",
        "translation",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-i18n",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.0"
    },
    "suggest": {
        "ext-json": "For handling JSON data",
        "ext-simplexml": "For handling XML data",
        "ext-libxml": "For handling XML data"
    },
    "autoload": {
        "psr-4": {
            "Pop\\I18n\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\I18n\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
